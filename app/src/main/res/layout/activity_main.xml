<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xqx.xbluetooth.MainActivity">

    <Button
        android:id="@+id/btnMac1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC地址:20:16:08:24:90:99"
        />

    <Button
        android:id="@+id/btnMac2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC地址:20:16:08:24:91:14"
        />

    <Button
        android:id="@+id/btnMac3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC地址:20:16:10:09:62:41"
        />

    <Button
        android:id="@+id/btnMac4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC地址:20:16:06:15:38:09"
        />

    <Button
        android:id="@+id/btnMac5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC地址:20:16:10:09:62:40"
        />

    <TextView
        android:id="@+id/txtMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接的传感器MAC地址："
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始连接"
        />
    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束连接"
        />
</LinearLayout>
